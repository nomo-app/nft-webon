{
	"name": "ts-svelte-webon-skeleton",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --port 3000 --host",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"bump-version": "nomo-webon-cli bumpVersion ./static/nomo_manifest.json",
		"deploy": "npm run bump-version && npm run build && nomo-webon-cli deploy build/ production"
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"nomo-webon-cli": "^0.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.7.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.1",
		"ethers": "^6.13.0",
		"ethersjs-nomo-webons": "^0.2.5",
		"nomo-webon-kit": "^0.1.40",
		"sass": "^1.75.0",
		"svelte-loading-spinners": "^0.3.6",
		"svelte-preprocess": "^5.1.3"
	}
}
